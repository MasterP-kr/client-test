{
	"name": "wheelchair-client",
	"productName": "Wheel Chair",
	"version": "0.0.1",
	"description": "Gonna put you in a wheel chair.",
	"license": "MIT",
	"repository": "MasterP-kr/client-test",
	"author": {
		"name": "Master P",
		"email": "no-reply@noemail.com",
		"url": "https://github.com/MasterP-kr"
	},
	"main": "src/index.js",
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"start": "electron ./src",
		"pack": "electron-builder --dir",
		"release": "electron-builder --macos --linux --windows ",
		"lint": "eslint ."
	},
	"dependencies": {
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-localshortcut": "^3.2.1",
		"electron-log": "^3.0.9",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.1",
		"electron-updater": "^4.2.0",
		"electron-util": "^0.13.0",
		"got": "^9.6.0",
		"mousetrap": "^1.6.3",
		"node-machine-id": "^1.1.12"
	},
	"devDependencies": {
		"electron": "^11.5.0",
		"electron-builder": "^21.2.0",
		"eslint": "^6.7.0",
		"eslint-config-standard": "^14.1.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-node": "^10.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"np": "^5.1.3",
		"xo": "^0.25.3"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": "always",
		"releaseDraft": false
	},
	"build": {
		"files": [
			"./src/**/*",
			"./build/**/*"
		],
		"appId": "com.none.WheelChair",
		"publish": [
			{
				"provider": "github",
				"owner": "MasterP-kr",
				"repo": "client-test"
			}
		],
		"mac": {
			"category": "public.app-category.games",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
